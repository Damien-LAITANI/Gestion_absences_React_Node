{
	"editor.linkedEditing": true,
	"editor.suggest.insertMode": "replace",
	"editor.acceptSuggestionOnCommitCharacter": false,
	"files.defaultLanguage": "markdown",
	// "", 5'55
	// "",
	// "",
	// "",
	// "",
	"window.titleBarStyle": "custom",
	"workbench.colorTheme": "Gruvbox Dark (Hard)",
	"explorer.confirmDelete": false,
	"gruvboxMaterial.darkContrast": "hard",
	"gruvboxMaterial.darkWorkbench": "flat",
	"explorer.confirmDragAndDrop": false,
	"editor.fontFamily": "Fira Code, Monaco, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"workbench.iconTheme": "material-icon-theme",
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"git.enableSmartCommit": true,
	"git.confirmSync": false,
	"angular.enable-experimental-ivy-prompt": false,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.editor.untitled.hint": "hidden",
	"security.workspace.trust.untrustedFiles": "open",
	"prettier.tabWidth": 4,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"css.lint.emptyRules": "ignore",
	"workbench.editorAssociations": {
		"*.md": "default",
		"*.ico": "cweijan.officeViewer",
		"*.png": "cweijan.officeViewer",
		"*.jpg": "cweijan.officeViewer",
		"*.pdf": "pdf.preview"
	},
	"bracketPairColorizer.depreciation-notice": false,
	"workbench.editor.closeOnFileDelete": true,
	"javascript.format.semicolons": "insert",
	"editor.wordWrap": "on",
	"explorer.compactFolders": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"thunder-client.codeSnippetLanguage": "cs-httpclient",
	"diffEditor.renderSideBySide": false,
	"editor.stickyScroll.enabled": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},

	// * Les langages

	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.autoClosingBrackets": "always"
	},
	"[css]": {
		"editor.defaultFormatter": "mikebovenlander.formate"
	},
	"[scss]": {
		"editor.defaultFormatter": "mikebovenlander.formate"
	},
	"[yaml]": {
		"editor.tabSize": 4,
		"editor.formatOnSave": false
	},
	"[json]": {
		"editor.tabSize": 2,
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.autoClosingBrackets": "always"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.autoClosingBrackets": "always"
	},
	"[php]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"window.zoomLevel": 2,
	"terminal.integrated.tabs.enabled": false,
	"editor.formatOnSave": true
}
